#!/bin/bash

# This bash script installs the micro editor reWrapText plugin.

mkdir -p $HOME/.config/micro/plug/reWrapText/help

cp LICENSE            $HOME/.config/micro/plug/reWrapText
cp reWrapText.lua     $HOME/.config/micro/plug/reWrapText
cp help/reWrapText.md $HOME/.config/micro/plug/reWrapText/help
